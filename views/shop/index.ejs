<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product in prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"> <%= prods[product].title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= prods[product].imageurl %>" alt="<%= prods[product].title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price"><%= prods[product].price %></h2>
                            <p class="product__description"><%= prods[product].description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/product/<%= prods[product]._id.toString() %>" class="btn">Details</a>
                            <%- include('../includes/add-to-cart.ejs', {product: prods[product]}) %> 
                        </div>
                    </article>
                <% } %>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
        </div>
    </main>

    <%- include('../includes/end.ejs') %>