<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product in prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"> <%= prods[product].title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= prods[product].imageurl %>" alt="<%= prods[product].title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price"><%= prods[product].price %></h2>
                            <p class="product__description"><%= prods[product].description %></p>
                        </div>
                        <div class="card__actions">
                            <a class="btn" href="/admin/edit-product/<%= prods[product]._id %>?edit=true">Edit</a>
                            <form action="/admin/delete-product" method="POST">
                                <input type="hidden" value="<%= prods[product]._id %>" name="productID" >
                                <button class="btn" type="submit">Delete</button>
                            </form>
                            
                        </div>
                    </article>
                <% } %>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
        </div>
    </main>

    <%- include('../includes/end.ejs') %>